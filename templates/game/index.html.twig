{% extends 'base.html.twig' %}

{% block title %}Bienvenue dans votre aventure...!{% endblock %}

{% block body %}

<p>{{ text }}</p>

{% if image %}
    <img src="/images/{{ image }}" alt="illustration" style="max-width: 400px;">
{% endif %}

<ul>
    {% for choice in choices %}
        <li>
            <a href="/?step={{ choice.goto }}">{{ choice.label }}</a>
        </li>
    {% endfor %}
</ul>

{% endblock %}
